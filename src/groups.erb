---
layout: page
title: Groups
permalink: /groups/
template_engine: erb
---


<ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
  <% site.data.groups.each do |group| %>
    <li class="card">
      <h2 class="border-b border-gray-900">
        <%= group.name %>
      </h2>

      <ul class="mt-4">
        <% group.links.compact.each do |name, url| %>
          <li class="inline-block mr-4">
            <a href="<%= url %>" title="<%= name.capitalize %>: <%= url %>" target="_blank" rel="noopenner" class="bg-gray-300 text-gray-900 hover:bg-white p-3 block rounded-full">
              <i data-feather="<%= name %>"></i>
              <span class="sr-only"><%= name %></span>
            </a>
          </li>
        <% end if group.links.present? %>
      </ul>
    </li>
  <% end %>
</ul>
